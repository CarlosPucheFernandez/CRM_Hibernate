<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!--Definicion de la conexion con la base de datos de PHP my admin-->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3307/crmbd?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC</property>    
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">localhost</property>
        <!--Definicion de las clases de mapeo de hibernate-->
        <mapping resource="mapping\Actividad.hbm.xml"/>
        <mapping resource="mapping\Contacto.hbm.xml"/>
        <mapping resource="mapping\Oportunidad.hbm.xml"/>
    
    </session-factory>
</hibernate-configuration>
